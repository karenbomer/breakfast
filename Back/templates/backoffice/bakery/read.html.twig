{% extends 'base.html.twig' %}

{% block title %}Liste des Boulangeries{% endblock %}

{% block body %}
    <h1 class="text-uppercase">Liste des Boulangeries</h1>

    <a class="btn btn-outline-light text-uppercase" href="{{ path('app_backoffice_bakery_create') }}">Créer une Boulangerie</a>

    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th class="text-center">Id</th>
                <th class="text-center">Nom</th>
                <th class="text-center">Ville</th>
                <th class="text-center">Numéro de téléphone</th>
                <th class="text-center">Photo de la boutique</th>
                <th class="text-center">Note</th>
                <th class="text-center">Statut</th>
                <th class="text-center">Frais de Livraison</th>
                <th class="text-center">Délai de Livraison</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for bakery in bakeries %}
            <tr>
                <td class="align-middle text-center">{{ bakery.id }}</td>
                <td class="align-middle text-center">{{ bakery.name }}</td>
                <td class="align-middle text-center">{{ bakery.address }}</td>
                <td class="align-middle text-center">{{ bakery.phoneNumber }}</td>
                <td class="align-middle text-center"><img class="backoffice_images" src="{{ bakery.profileImg }}"</td>
                <td class="align-middle text-center">{{ bakery.rating }}</td>
                <td class="align-middle text-center">{{ bakery.status }}</td>
                <td class="align-middle text-center">{{ bakery.deliveryFees }}</td>
                <td class="align-middle text-center">{{ bakery.deliveryTime }}</td>
                <td class="align-middle text-center">
                    <a class="btn btn-outline-light text-uppercase" href="{{ path('app_backoffice_bakery_show', {'id': bakery.id}) }}">Détails</a>
                    <a class="btn btn-outline-light text-uppercase" href="{{ path('app_backoffice_bakery_update', {'id': bakery.id}) }}">Mettre à jour</a>
                </td>
                <td class="align-middle text-center">
                    {{ include('backoffice/bakery/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">Aucune Boulangerie trouvé.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
