{% extends 'base.html.twig' %}

{% block title %}Liste des Utilisateurs{% endblock %}

{% block body %}
    <h1 class="text-uppercase">Liste des Utilisateurs</h1>

    <a class="btn btn-outline-light text-uppercase" href="{{ path('app_backoffice_user_create') }}">Créer un Utilisateur</a>

    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th class="text-center">Id</th>
                <th class="text-center">Nom</th>
                <th class="text-center">Email</th>
                <th class="text-center">Adresse</th>
                <th class="text-center">Code postal</th>
                <th class="text-center">Roles</th>
                <th class="text-center"></th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td class="align-middle text-center">{{ user.id }}</td>
                {# Lien ci_dessous renvoie au Détails de la commande de l'utilisateur #}
                <td class="align-middle text-center"><a href="#">{{ user.name }}</a></td>
                <td class="align-middle text-center">{{ user.email }}</td>
                <td class="align-middle text-center">{{ user.address }}</td>
                <td class="align-middle text-center">{{ user.zipCode }}</td>
                <td class="align-middle text-center">{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td class="align-middle text-center">
                    <a class="btn btn-outline-light text-uppercase" href="{{ path('app_backoffice_user_show', {'id': user.id}) }}">Détails</a>
                    <a class="btn btn-outline-light text-uppercase" href="{{ path('app_backoffice_user_update', {'id': user.id}) }}">Mettre à jour</a>
                </td>
                <td class="align-middle text-center">
                    {{ include('backoffice/user/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">Aucun Utilisateur trouvé.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
