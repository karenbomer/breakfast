{% extends 'base.html.twig' %}

{% block title %}Utilisateur nº {{ user.id }}{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="text-uppercase">Détails de l'Utilisateur nº {{ user.id }}</h1>

		{{ include('backoffice/user/_delete_form.html.twig') }}

		<a class="btn btn-outline-light text-uppercase mb-2" href="{{ path('app_backoffice_user_read') }}">Retour à la liste</a>

		<a class="btn btn-outline-light text-uppercase mb-2" href="{{ path('app_backoffice_user_update', {'id': user.id}) }}">Mettre à jour</a>

		<table class="table table-dark table-striped">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ user.id }}</td>
				</tr>
				<tr>
					<th>Email</th>
					<td>{{ user.email }}</td>
				</tr>
				<tr>
					<th>Roles</th>
					<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
				</tr>
				<tr>
					<th>Nom</th>
					<td>{{ user.name }}</td>
				</tr>
				<tr>
					<th>Adresse</th>
					<td>{{ user.address }}</td>
				</tr>
				<tr>
					<th>Code postal</th>
					<td>{{ user.zipCode }}</td>
				</tr>
			</tbody>
		</table>
	</div>
{% endblock %}
