{% extends 'base.html.twig' %}

{% block title %}Article nº {{ post.id }}{% endblock %}

{% block body %}
   <div class="container">
        <h1 class="text-uppercase">Détails de l'Article nº {{ post.id }}</h1>

        {{ include('backoffice/post/_delete_form.html.twig') }}

        <a class="btn btn-outline-light text-uppercase mb-2" href="{{ path('app_backoffice_post_read') }}">Retour à la liste</a>

        <a class="btn btn-outline-light text-uppercase mb-2" href="{{ path('app_backoffice_post_update', {'id': post.id}) }}">Mettre à jour</a>

    <table class="table table-dark table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ post.title }}</td>
            </tr>
            <tr>
                <th>Résumé</th>
                <td>{{ post.summary }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ post.content }}</td>
            </tr>
            <tr>
                <th>Date de Publication</th>
                <td>{{ post.publicationDate ? post.publicationDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Auteur</th>
                <td>{{ post.author.name }}</td>
            </tr>
        </tbody>
    </table>



    
{% endblock %}
