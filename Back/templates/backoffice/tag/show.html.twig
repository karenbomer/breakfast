{% extends 'base.html.twig' %}

{% block title %}Tag nº {{ tag.id }}{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-uppercase">Détails du Tag nº {{ tag.id }}</h1>

        {{ include('backoffice/tag/_delete_form.html.twig') }}

        <a class="btn btn-outline-light text-uppercase mb-2" href="{{ path('app_backoffice_tag_read') }}">Retour à la liste</a>

        <a class="btn btn-outline-light text-uppercase mb-2" href="{{ path('app_backoffice_tag_update', {'id': tag.id}) }}">Mettre à jour</a>

        <table class="table table-dark table-striped">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ tag.id }}</td>
                </tr>
                <tr>
                    <th>Nom de Tag</th>
                    <td>{{ tag.name }}</td>
                </tr>
            </tbody>
        </table>
    </div>

{% endblock %}
