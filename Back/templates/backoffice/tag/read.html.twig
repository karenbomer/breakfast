{% extends 'base.html.twig' %}

{% block title %}Liste des Tags{% endblock %}

{% block body %}
    <h1 class="text-uppercase">Liste des Tags</h1>

    <a class="btn btn-outline-light text-uppercase" href="{{ path('app_backoffice_tag_create') }}">Créer un Tag</a>

    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th class="text-center">Id</th>
                <th class="text-center">Nom de Tag</th>
                <th class="text-center"></th>
            </tr>
        </thead>
        <tbody>
        {% for tag in tags %}
            <tr>
                <td class="align-middle text-center">{{ tag.id }}</td>
                <td class="align-middle text-center">{{ tag.name }}</td>
                <td class="align-middle text-center">
                    <a class="btn btn-outline-light text-uppercase" href="{{ path('app_backoffice_tag_show', {'id': tag.id}) }}">Détails</a>
                    <a class="btn btn-outline-light text-uppercase" href="{{ path('app_backoffice_tag_update', {'id': tag.id}) }}">Mettre à jour</a>
                </td>
                <td class="align-middle text-center">
                    {{ include('backoffice/tag/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun Tag trouvé.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
