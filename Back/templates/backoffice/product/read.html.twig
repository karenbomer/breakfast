{% extends 'base.html.twig' %}

{% block title %}Liste des Produits{% endblock %}

{% block body %}
    <h1 class="text-uppercase">Liste des Produits</h1>

    <a class="btn btn-outline-light text-uppercase" href="{{ path('app_backoffice_product_create') }}">Créer un Produit</a>

    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th class="text-center">Id</th>
                <th class="text-center">Nom</th>
                <th class="text-center">Prix</th>
                <th class="text-center">Description</th>
                <th class="text-center">Image</th>
                <th class="text-center"></th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td class="align-middle text-center">{{ product.id }}</td>
                <td class="align-middle text-center">{{ product.name }}</td>
                <td class="align-middle text-center">{{ product.price }}</td>
                <td class="align-middle text-center">{{ product.description }}</td>
                <td class="align-middle text-center"><img class="backoffice_images" src="{{ product.picture }}"</td>
                <td class="align-middle text-center">
                    <a class="btn btn-outline-light text-uppercase" href="{{ path('app_backoffice_product_show', {'id': product.id}) }}">Détails</a>
                    <a class="btn btn-outline-light text-uppercase" href="{{ path('app_backoffice_product_update', {'id': product.id}) }}">Mettre à jour</a>
                </td>
                <td class="align-middle text-center">
                    {{ include('backoffice/product/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucun Produit trouvé.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
