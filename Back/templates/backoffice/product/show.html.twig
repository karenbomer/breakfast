{% extends 'base.html.twig' %}

{% block title %}Produit nº {{ product.id }}{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-uppercase">Détails du Produit nº {{ product.id }}</h1>

        {{ include('backoffice/product/_delete_form.html.twig') }}

        <a class="btn btn-outline-light text-uppercase mb-2" href="{{ path('app_backoffice_product_read') }}">Retour à la liste</a>

        <a class="btn btn-outline-light text-uppercase mb-2" href="{{ path('app_backoffice_product_update', {'id': product.id}) }}">Mettre à jour</a>

        <table class="table table-dark table-striped">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ product.id }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ product.name }}</td>
                </tr>
                <tr>
                    <th>Prix</th>
                    <td>{{ product.price }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ product.description }}</td>
                </tr>
                <tr>
                    <th>Image</th>
                    <td><img class="product_image" src="{{ product.picture }}"</td>
                </tr>
                <tr>
                    <th>Boulangerie</th>
                    <td>{{ product.bakery }} </td>
                </tr>
                <tr>
                    <th>Catégorie</th>
                    <td>{{ product.category }}</td>
                </tr>
                
                <!-- TODO intégrer les tags associés au produit-->
                <tr>
                    <th>Tags</th>
                    <td>
                        {% for tag in tags %}
                            {{ tag.name }} /
                        {% endfor %}
                    </td>
                </tr>

            </tbody>
        </table>
    </div>
{% endblock %}
