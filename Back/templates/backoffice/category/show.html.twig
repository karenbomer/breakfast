{% extends 'base.html.twig' %}

{% block title %}Catégorie nº {{ category.id }}{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-uppercase">Détails de la Catégorie nº {{ category.id }}</h1>

        {{ include('backoffice/category/_delete_form.html.twig') }}

        <a class="btn btn-outline-light text-uppercase mb-2" href="{{ path('app_backoffice_category_read') }}">Retour à la liste</a>

        <a class="btn btn-outline-light text-uppercase mb-2" href="{{ path('app_backoffice_category_update', {'id': category.id}) }}">Mettre à jour</a>

        <table class="table table-dark table-striped">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ category.id }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ category.name }}</td>
                </tr>

            </tbody>
        </table>
    </div>
{% endblock %}
