{% extends 'base.html.twig' %}

{% block title %}Liste des Catégories{% endblock %}

{% block body %}
    <h1 class="text-uppercase">Liste des Catégories</h1>

    <a class="btn btn-outline-light text-uppercase" href="{{ path('app_backoffice_category_create') }}">Créer une Catégorie</a>

    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th class="text-center">Id</th>
                <th class="text-center">Nom</th>
                <th class="text-center"></th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td class="align-middle text-center">{{ category.id }}</td>
                <td class="align-middle text-center">{{ category.name }}</td>
                <td class="align-middle text-center">
                    <a class="btn btn-outline-light text-uppercase" href="{{ path('app_backoffice_category_show', {'id': category.id}) }}">Détails</a>
                    <a class="btn btn-outline-light text-uppercase" href="{{ path('app_backoffice_category_update', {'id': category.id}) }}">Mettre à jour</a>
                </td>
                <td class="align-middle text-center">
                    {{ include('backoffice/category/_delete_form.html.twig') }}
                </td>
            </tr>
            
        {% else %}
            <tr>
                <td colspan="3">Aucune Categorie trouvé.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
