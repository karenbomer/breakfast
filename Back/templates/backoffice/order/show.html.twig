{% extends 'base.html.twig' %}

{% block title %}Commande nº {{ order.id }}{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-uppercase">Détails de la Commande nº {{ order.id }}</h1>

        {{ include('backoffice/order/_delete_form.html.twig') }}
        
        <a class="btn btn-outline-light text-uppercase mb-2" href="{{ path('app_backoffice_order_read') }}">Retour à la liste</a>

        <a class="btn btn-outline-light text-uppercase mb-2" href="{{ path('app_backoffice_order_update', {'id': order.id}) }}">Mettre à jour</a>

        <table class="table table-dark table-striped">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ order.id }}</td>
                </tr>
                <tr>
                    <th>Prix Total</th>
                    <td>{{ order.totalPrice }}</td>
                </tr>
                <tr>
                    <th>Date de Commande</th>
                    <td>{{ order.orderDate ? order.orderDate|date('Y-m-d') : '' }}</td>
                </tr>
                <tr>
                    <th>Utilisateur</th>
                    <td>{{ order.user.name }}</td>
                </tr>
                <tr>
                    <th>Produits</th>
                    <td>
                        {% for productItem in product %}
                            {{ productItem.custom }}<br>
                        {% endfor %}
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
{% endblock %}
